<section class="section">
  <h2 class="title"><%= current_user.name %>'s Album</h2>
  <h3 class="subtitle">Edit your stickers:</h3>

  <%= form_for @album do |f| %>
    <%= f.hidden_field(:user_id) %>
    <div class="grid-wrapper">
      <% (1..100).each do |sticker| %>
          <div class="grid-item">
            <div class="control has-text-centered">
              <p class="box has-text-centered has-text-weight-bold sticker-number">
                <%= sticker %>
              </p>

              <label class="sticker-actions button is-primary is-fullwidth">
                <%= f.radio_button("sticker_#{sticker}".to_sym, "got_it") %>
                <span for="<%= "album_sticker_#{sticker}_got_it" %>" class="radio">
                  Got it
                </span>
              </label>

              <label class="sticker-actions button is-info is-fullwidth">
                <%= f.radio_button("sticker_#{sticker}".to_sym, "duplicate") %>
                <span for="<%= "album_sticker_#{sticker}_duplicate" %>" class="radio">
                  Duplicate
                </span>
              </label>

              <label class="sticker-actions button is-danger is-fullwidth">
                <%= f.radio_button("sticker_#{sticker}".to_sym, "missing") %>
                <span for="<%= "album_sticker_#{sticker}_missing" %>" class="radio">
                  Missing
                </span>
              </label>
            </div>
          </div>

      <% end %>
        </div>
        <%= f.submit "Save", class: "button is-success is-large" %>
        <%= link_to "Cancel", '/', class: "button is-danger is-large" %>
  <% end %>
</section>
